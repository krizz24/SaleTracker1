<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="2.5dp"
    android:paddingRight="5dp"
    android:paddingBottom="2.5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/layout_product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="7dip"
            android:padding="2dip">

            <TextView
                android:id="@+id/product_id"
                android:layout_width="54dp"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="25"

                android:textColor="#040404"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dip"

            android:text="Bag"
            android:textColor="#040404"
            android:textSize="15sp"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/cart_plus_minus_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="50dip"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:text="Rs. 200"
                android:textColor="#1d1d1d"
                android:textSize="12sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/product_manufacturer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="ABC Pvt Ltd."
                android:textColor="#343434"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/cart_minus_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/cart_product_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="10"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cart_plus_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:clickable="true"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>